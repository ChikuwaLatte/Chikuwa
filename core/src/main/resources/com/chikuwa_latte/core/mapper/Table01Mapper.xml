<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chikuwa_latte.core.mapper.Table01Mapper">
    <resultMap type="com.chikuwa_latte.core.entity.master.Table01" id="Table01"><!--  id属性は任意の値 -->
        <!--  columnはSQLのカラム propertyはエンティティクラスのフィールド -->
        <id column="user_id" property="userId"/>
        <result column="memo" property="memo"/>
    </resultMap>
    <select id="find" resultType="com.chikuwa_latte.core.entity.master.Table01">
        SELECT
            user_id,
            memo
        FROM
            table_01
        WHERE
            user_id = #{userId}
    </select>
    <select id="findAll" resultType="com.chikuwa_latte.core.entity.master.Table01">
        SELECT
            user_id,
            memo
        FROM
            table_01
    </select>
    <insert id="create">
        insert into table_01 (
            user_id,
            memo
        )
        values (
            #{userId},
            #{memo}
        )
    </insert>
    <update id="update">
        update  table_01
        set     memo = #{memo}
        where   user_id = #{userId}
    </update>
    
    <delete id="delete">
        delete from
            table_01
        where
            user_id = #{userId} 
    </delete>
</mapper>